{
	"name": "otm-bot",
	"version": "1.0.0",
	"description": "osu! tournament manager bot",
	"main": "/src/index.ts",
	"scripts": {
		"start": "ts-node src/index.ts",
		"start:prod": "npx prisma migrate deploy && ts-node src/index.ts",
		"start:bun": "bun src/index.ts",
		"dev": "cross-env NODE_ENV=development ts-node src/index.ts",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix"
	},
	"keywords": [
		"discord.js",
		"bot",
		"typescript",
		"ts-node",
		"mysql",
		"mariadb",
		"prisma",
		"osu!"
	],
	"author": "Francisco Hauva <phauva@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@axiomhq/winston": "1.0.0-rc.1",
		"@paralleldrive/cuid2": "^2.2.2",
		"@prisma/client": "5.4.2",
		"@sapphire/decorators": "^6.0.2",
		"@sapphire/discord.js-utilities": "^7.0.2",
		"@sapphire/framework": "^4.6.1",
		"@sapphire/plugin-hmr": "^2.0.2",
		"@sapphire/plugin-logger": "^3.0.6",
		"@sapphire/plugin-subcommands": "^4.2.1",
		"@sapphire/utilities": "^3.13.0",
		"adm-zip": "^0.5.10",
		"axios": "^1.5.1",
		"bullmq": "^4.12.5",
		"discord.js": "^14.13.0",
		"luxon": "^3.4.3",
		"mysql2": "^3.6.1",
		"osu-api-extended": "^2.7.67",
		"prettier": "^3.0.3",
		"typescript": "^5.2.2",
		"winston": "^3.11.0",
		"winston-daily-rotate-file": "^4.7.1",
		"winston-loki": "^6.0.7"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.2",
		"@types/luxon": "^3.3.2",
		"@types/node": "^20.8.4",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.9.0",
		"cross-env": "^7.0.3",
		"dotenv-safe": "^8.2.0",
		"eslint": "^8.51.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-n": "^16.1.0",
		"eslint-plugin-promise": "^6.1.1",
		"nodemon": "^3.0.1",
		"prisma": "^5.4.2",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 2
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"ignorePatterns": [
			"dist",
			"node_modules"
		],
		"rules": {
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		}
	}
}
